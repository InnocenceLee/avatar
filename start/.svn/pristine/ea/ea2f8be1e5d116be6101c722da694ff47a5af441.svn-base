/* reset */
body {
    margin: 0;
}
img {
    border-style: none;
}
button,
input {
    font: inherit; /* opinionated */
    margin: 0;
}
button,
input {
    overflow: visible;
    border: none;
}
button {
    text-transform: none;
    border: none;
    padding: 0;
}

/* 全局字体 */
html {
    font-family: 'Microsoft Yahei';
}

/* 背景 */
#bg {
	position: fixed; 
	top: -50%; 
	left: -50%; 
	width: 200%; 
	height: 200%;
}
#bg img {
	position: absolute; 
	top: 0; 
	left: 0; 
	right: 0; 
	bottom: 0; 
	margin: auto; 
	min-width: 50%;
	min-height: 50%;
}
/* LOGO */
.logo {
    position: absolute;
    left: 60px;
    top: 51px;
    width: 197px;
    height: 52px;
    background-image: url(./images/logo-with-text.png);
}

.panel {
    position:absolute;  
    top: 50%;
    left: 50%;
    margin-top: -242px;
    margin-left: -242px;
    width: 386px;
    height: 485px;
}
.panel-header {
    margin: 0 auto;
}
.panel-header .title {
    width: 372px;
    height: 108px;
    margin-left: 56px;
    margin-bottom: 29px;
    background: url(./images/sub-logo.png);
}
.panel-body {
    width: 100%;
    height: auto;
    background: rgba(255, 255, 255, 0.31);
    filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#2fffffff', endColorstr='#2fffffff');
    padding: 25px 49px;
    border-radius: 4px;
    box-shadow: 2px 3px 19.8px 1px rgba(16, 29, 51, 0.2);
    /* -ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=4, Direction=120, Color='#101d33')"; */
}
.panel-body .input-group {
    position: relative;
    width: 384px;
    height: 52px;
    margin: 20px 0;
}
.panel-body .input {
    width: 352px;
    height: 50px;
    line-height: 50px;
    padding: 0px 16px;
    border-radius: 4px;
    background: #ffffff;
}
.panel-body .chaptcha {
    position: absolute;
    margin-left: -105px;
    margin-top: 7px;
    left: 100%;
    top: 0;
}
.panel-body .btn {
    width: 384px;
    height: 52px;
    background: #fc4f3f;
    border-radius: 4px;
    color: #ffffff;
    font-size: 20px;
    cursor: pointer;
}

.message {
	text-align: center;
    color: #fc4f3f;
}

/* placeholder */
.placeholder {
    color: #aaaaaa;
}