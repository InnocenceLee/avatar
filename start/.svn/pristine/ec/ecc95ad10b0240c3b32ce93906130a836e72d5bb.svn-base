                <thead class="courseDetail-thead">
                <tr class="myDtr1">
                    <th></th>
                    <th>名称</th>
                    <th>类型</th>
                    <th>课时描述</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody id="questionBank-tbody">
                <tr>
                    <td>1</td>
