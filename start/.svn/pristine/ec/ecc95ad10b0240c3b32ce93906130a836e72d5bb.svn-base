                    <td data-toggle="modal" data-target="#myclModal">详情</td>
                </tr>
                </tbody>
            </table>
            <!-- 点击详情触发的Modal -->
            <div class="modal fade" id="myclModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!--摸态框头部信息-->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel3">详情</h4>
                        </div>
                        <div class="modal-body">
                            <span>课程编号</span>
                            <input type="text" class="form-control mycontrol1 courseNumber" name="id"/><br>
                            <span class="myspan1" name="id">名称</span>
                            <input type="text" class="form-control mycontrol2 courseNumber" name="name"/><br>
                            <span>类型</span>
                            <input type="text" class="form-control mycontrol2 courseNumber" name="type"/><br>
                            <span class="myspan1">课时描述</span>
                            <textarea class="form-control courseNumber" rows="5" cols="44"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-primary">确定</button>
                        </div>
                    </div>
                </div>
            </div>
