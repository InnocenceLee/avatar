.choose-list {
	position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -200px;
    margin-left: -250px;
    width: 500px;
    margin-bottom: 100px;
}
.choose-list .title {
	width: 100%;
	margin-bottom: 20px;
	color: #ffffff;
	font-size: 20px;
	text-align: center;
}
.choose-list ul {
	width: 100%;
    min-height: 200px;
    background: #ffffff;
    list-style: none;
    border-radius: 4px;
    padding-left: 0;
}

.choose-list li {
	height: 100px;
    border-top: solid 1px #cccccc;
}
.choose-list li:first-child {
	border: none;
}

.choose-list li a {
	display: inline-block;
    width: 100%;
    height: 100%;
    line-height: 30px;
    padding: 10px 20px;
    color: #2b2e3f;
    text-decoration: none;
}
.choose-list li a:hover {
	color: #fc4f3f;
}
.choose-list li span {
	font-size: 25px;
	margin-right: 10px;
}
.choose-list li span.station {
    font-size: 14px;
}

.choose-list .choose-go {
	float: right;
	margin-top: -4px;
}
.choose-list .choose-go i {
    font-size: 30px;
    vertical-align: middle;
}